{
  "hud_title_text/title_frame/title": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "insert_back",
        "value": [
          {
            "binding_type": "view",
            "source_property_name": "((#text - 'di:') = #text)",
            "target_property_name": "#visible"
          }
        ]
      }
    ]
  },

  "centered_gui_elements_at_bottom_middle": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "thirst_bar_factory@disease_hud_bars.thirst_bar_factory": {
              "offset": [ 15, 2 ],
              "ignored": "$pocket_screen"
            }
          }
        ]
      }
    ]
  },

  "chat_panel/stack_panel": {
    "factory": {
      "name": "chat_item_factory",
      "max_children_size": 8,
      "control_ids": {
        "chat_item": "chat_item@hud.chat_grid_item"
      }
    }
  },

  "chat_grid_item": {
    "type": "stack_panel",

    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_after",
        "control_name": "chat_background",
        "value": [
          {
            "padding": {
              "type": "panel",
              "size": [ "100%", 2 ],

              "bindings": [
                {
                  "binding_type": "view",
                  "source_property_name": "('§z' + #text)",
                  "target_property_name": "#f_text"
                },
                {
                  "binding_type": "view",
                  "source_property_name": "(not ((#f_text - $flag_for_disease) = #f_text)))",
                  "target_property_name": "#visible"
                }
              ]
            } 
          },
          { "notif_panel@hud_notif.notif_panel": {} }
        ]
      },
      {
        "array_name": "bindings",
        "operation": "insert_back",
        "value": {
          "binding_name": "#chat_text",
          "binding_name_override": "#text",
          "binding_type": "collection",
          "binding_collection_name": "chat_text_grid",
          "binding_condition": "once"
        }
      }
    ]
  },

  "chat_grid_item/chat_background": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "replace",
        "control_name": "chat_text",
        "value": [
          { "chat_text@new_chat_label": {} }
        ]
      }
    ]
  },

  "new_chat_label": {
    "type": "panel",
    "size": [ "100%", "100%cm" ],

    "controls": [
      {
        "chat_label": {
          "type": "label",
					"text": "#f_text",

          "layer": 31,
					"localize": false,
					"size": [ "100%", "default" ],

          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "('§z' + #text)",
              "target_property_name": "#f_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#f_text - $flag_for_disease) = #f_text)",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

  "root_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "thirst_bar_factory@disease_hud_bars.thirst_bar_factory": {
              "offset": [ "-63%", 2 ],
              "ignored": "$desktop_screen"
            }
          }
        ]
      }
    ]
  }
}