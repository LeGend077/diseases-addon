{
    "hud_title_text": {
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "((#text - 'Thirst') = #text)",
                "target_property_name": "#visible"
            }
        ]
    },
    "thirst_container": {
        "type": "image",
        "texture": "textures/ui/Black",
        "size": [
            70,
            6
        ],
        "anchor_from": "bottom_right",
        "anchor_to": "bottom_right",
        "offset": [
            -4,
            -4
        ],
        "alpha": 1,
        "propagate_alpha": false,
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not ((#text - 'Thirst') = #text))",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "thirst_icon": {
                    "type": "image",
                    "texture": "textures/ui/achievements",
                    "size": [12, 12],
                    "anchor_from": "left_middle",
                    "anchor_to": "left_middle",
                    "offset": [-13, -1]
                }
            },
            {
                "thirst_bar": {
                    "type": "image",
                    "size": [
                        70, 6
                    ],
                    "layer": 3,
                    "texture": "textures/ui/experiencebarfull",
                    "clip_pixelperfect": false,
                    "clip_direction": "left",
                    "$clip_max": 100.0,
                    "color": [
                        0,
                        0,
                        1
                    ],
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string",
                            "binding_name_override": "#text",
                            "binding_type": "global"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#text - (%.8s * #text))",
                            "target_property_name": "#a"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(($clip_max - #a) / $clip_max)",
                            "target_property_name": "#clip_ratio"
                        }
                    ]
                }
            }
        ]
    },
    "thirst_factory": {
        "type": "panel",
        "factory": {
            "name": "hud_title_text_factory",
            "control_ids": {
                "hud_title_text": "thirst_container@hud.thirst_container"
            }
        }
    },
    "root_panel": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_back",
                "value": {
                    "thirst_factory@hud.thirst_factory": {}
                }
            }
        ]
    }
}