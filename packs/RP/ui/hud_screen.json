{
    "hud_title_text/title_frame/title": {
        "modifications": [
            {
                "array_name": "bindings",
                "operation": "insert_back",
                "value": [
                    {
                        "binding_type": "view",
                        "source_property_name": "((#text - 'Thirst') = #text)",
                        "target_property_name": "#visible"
                    }
                ]
            }
        ]
    },
    "thirst_bar_container": {
        "type": "image",
        "texture": "textures/ui/thirst_bar_empty",
        "size": [
            6,
            70
        ],
        "anchor_from": "bottom_right",
        "anchor_to": "bottom_right",
        "offset": [
            -4,
            -4
        ],
        "bindings": [
            {
                "binding_name": "#hud_title_text_string",
                "binding_name_override": "#text",
                "binding_type": "global"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not ((#text - 'Thirst') = #text))",
                "target_property_name": "#visible"
            }
        ],
        "controls": [
            {
                "thirst_bar_full": {
                    "type": "image",
                    "layer": 2,
                    "texture": "textures/ui/thirst_bar_full",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "clip_pixelperfect": false,
                    "clip_direction": "down",
                    "$clip_max": 100,
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string",
                            "binding_name_override": "#text",
                            "binding_type": "global"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#text - (%.8s * #text))",
                            "target_property_name": "#f_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(($clip_max - #f_text) / $clip_max)",
                            "target_property_name": "#clip_ratio"
                        }
                    ]
                }
            }
        ]
    },
    "thirst_bar_factory": {
        "type": "panel",
        "factory": {
            "name": "hud_title_text_factory",
            "control_ids": {
                "hud_title_text": "thirst_bar_container@hud.thirst_bar_container"
            }
        }
    },
    "centered_gui_elements_at_bottom_middle": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_back",
                "value": [
                    {
                        "thirst_bar_factory@hud.thirst_bar_factory": {
                            "offset": [
                                15,
                                2
                            ]
                        }
                    }
                ]
            }
        ]
    },
    "root_panel": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_front",
                "value": [
                    {
                        "thirst_bar_factory@hud.thirst_bar_factory": {
                            "offset": [
                                "-63%",
                                2
                            ],
                            "ignored": "$desktop_screen"
                        }
                    }
                ]
            }
        ]
    }
}